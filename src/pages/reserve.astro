---
import LandingLayout from "../layouts/LandingLayout.astro";
import Spinner from "../components/Spinner.astro";
import ToTop from "../components/ToTop.astro";

import ContactForm from "../components/ContactForrm";
---

<LandingLayout pageTitle="Reservations">
  <Spinner />

  <!-- Page Header Start -->
  <div class="container-fluid page-header mb-5 py-5">
    <div class="container">
      <h1 class="display-3 text-white mb-3 animated slideInDown">
        Reservations
      </h1>
      <nav aria-label="breadcrumb animated slideInDown">
        <ol class="breadcrumb text-uppercase">
          <li class="breadcrumb-item">
            <a class="text-white" href="/">Home</a>
          </li>
          <li class="breadcrumb-item text-white active" aria-current="page">
            Reservations
          </li>
        </ol>
      </nav>
    </div>
  </div>
  <!-- Page Header End -->
  <div class="container">
    <h3>Make A Reservation</h3>
    <p>
      For a more accurate quote. Please fill all the required information below.
      We will contact you shortly when we receieve your message.
    </p>
    <br />
    <hr />
    <br />
    <ContactForm client:load />
  </div>

  <ToTop />
</LandingLayout>

<style>
  .page-header {
    background-image: url("/assets/img/white-stretch-limo.webp");
  }
</style>
