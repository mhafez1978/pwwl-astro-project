---
import LandingLayout from "../layouts/LandingLayout.astro";
import Spinner from "../components/Spinner.astro";
import ToTop from "../components/ToTop.astro";
import Booking from "../components/Booking.astro";
import Testimonial from "../components/Testimonial.astro";
import Service from "../components/Service.astro";
---

<LandingLayout
  pageTitle="Services"
  pageDescription="Prestige Worldwide Limo Provides Professional Transportation Services to cover any event or function"
  pageKeywords="charlotte Wedding limo, charlotte Party Bus, charlotte Charter Bus, charlotte prom limo, Airport limo, Wine Tour Limo, Limo Near Charlotte NC"
>
  <Spinner />

  <!-- Page Header Start -->
  <div class="container-fluid page-header mb-5 py-5">
    <div class="container">
      <h1 class="display-3 text-white mb-3 animated slideInDown">
        Our Services
      </h1>
      <nav aria-label="breadcrumb animated slideInDown">
        <ol class="breadcrumb text-uppercase">
          <li class="breadcrumb-item">
            <a class="text-white" href="/">Home</a>
          </li>
          <li class="breadcrumb-item text-white active" aria-current="page">
            Services
          </li>
        </ol>
      </nav>
    </div>
  </div>
  <!-- Page Header End -->
  <Service />
  <Booking />
  <Testimonial />
  <ToTop />
</LandingLayout>

<style>
  .page-header {
    background-image: url("/assets/img/white-stretch-limo.webp");
  }
</style>
